generator client {
  provider      = "prisma-client-js"
  output        = "../node_modules/.prisma/client"
  binaryTargets = ["native", "windows", "debian-openssl-3.0.x"]
}

datasource db {
  provider = "sqlite"
  url      = "file:./transcriptor.db"
}

model Transcription {
  id              String   @id @default(cuid())
  fileName        String
  originalPath    String
  status          TranscriptionStatus @default(PENDING)
  progress        Float    @default(0.0)
  model           String?  // Whisper model used (base, small, medium, large)
  language        String?
  duration        Float?
  text            String?
  segments        Json?
  wordCount       Int?
  confidence      Float?
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt
  completedAt     DateTime?
  errorMessage    String?
  
  @@map("transcriptions")
}

enum TranscriptionStatus {
  PENDING
  PROCESSING
  COMPLETED
  FAILED
}
