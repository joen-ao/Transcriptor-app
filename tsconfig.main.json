{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "module": "commonjs",
    "target": "ES2020",
    "outDir": "./build/main",
    "noEmit": false,
    "lib": ["ES2020"]
  },
  "include": [
    "src/main/**/*",
    "src/shared/**/*",
    "src/types/**/*"
  ],
  "exclude": [
    "src/renderer/**/*"
  ]
}